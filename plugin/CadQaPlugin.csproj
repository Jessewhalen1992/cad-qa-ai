<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>CadQaPlugin</AssemblyName>
    <Platforms>x64</Platforms>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <!-- AutoCAD SDK references -->
    <Reference Include="acdbmgd"
               HintPath="C:\Program Files\Autodesk\AutoCAD 2025\Managed\Legacy\Acdbmgd.dll"
               Private="false" />
    <Reference Include="acmgd"
               HintPath="C:\Program Files\Autodesk\AutoCAD 2025\Managed\Legacy\Acmgd.dll"
               Private="false" />
    <Reference Include="ManagedMapApi"
               HintPath="C:\Program Files\Autodesk\AutoCAD 2025\Managed\Legacy\ManagedMapApi.dll"
               Private="false" />

    <!-- include rule and exporter source files -->
    <Compile Include="..\rules\**\*.cs" />
    <Compile Include="..\export\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="6.0.20" />
  </ItemGroup>
</Project>
